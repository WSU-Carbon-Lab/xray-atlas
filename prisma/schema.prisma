generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id      String @id @default(cuid())
  name    String
  image   String
  clerkId String @unique
}

model Molecule {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  iupacName       String   @unique
  commonName      String[]
  inchi           String
  chemicalFormula String
  smiles          String
  casNumber       String?  @unique
  pubChemCid      String?  @unique
  createdAt       DateTime @default(now()) @db.Timestamp(6)
  updatedAt       DateTime @default(now()) @updatedAt @db.Timestamp(6)
  Sample          Sample[]
}

model Vendor {
  id   String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String
  url  String?
}

model Instrument {
  id         String       @id @default(cuid())
  instrument String
  link       String?
  facility   String
  Experiment Experiment[]
}

model Sample {
  id          String       @id @default(cuid())
  description Json?        @db.Json
  molecule    String       @db.Uuid
  Experiment  Experiment[]
  Molecule    Molecule     @relation(fields: [molecule], references: [id], onDelete: NoAction)
}

model Experiment {
  id                  String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sample              String
  instrument          String?
  polarizationPolar   Decimal     @default(90) @db.Decimal
  polarizationAzimuth Decimal?    @default(0) @db.Decimal
  targetAtom          String
  coreState           CoreLevel
  energy              Decimal[]   @db.Decimal
  processedAbsorption Decimal[]   @db.Decimal
  rawAbsorption       Decimal[]   @unique @db.Decimal
  upstreamIzero       Decimal[]   @db.Decimal
  independentIzero    Decimal[]   @db.Decimal
  isStandard          Boolean
  referenceStandard   String?
  Instrument          Instrument? @relation(fields: [referenceStandard], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Sample              Sample      @relation(fields: [sample], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

enum CoreLevel {
  K
  L1
  L2
  L3
  M1
  M2
  M3
}
