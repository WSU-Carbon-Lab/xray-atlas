// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

// Necessary for Next auth
// Account and Session are not needed for Clerk

model User {
    id            String       @id @default(cuid())
    clerkId       String       @unique
    orcid         String?
    name          String?
    email         String?
    emailVerified DateTime?
    image         String?
    samples       Sample[]
    experiments   Experiment[]
}

// Data Models

model Molecule {
    id               String   @id @default(cuid())
    name             String   @unique
    iupacName        String
    synonyms         String[]
    molecularFormula String
    image            String?
    smiles           String
    inchi            String
    inchiKey         String?
    casNumber        String?
    pubChemCid       String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    samples Sample[] @relation()
}

model Vendor {
    id   String  @id @default(cuid())
    name String
    url  String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    samples Sample[] @relation()
}

model Instrument {
    id         String  @id @default(cuid())
    facility   String
    instrument String
    link       String?

    experiments Experiment[] @relation()
}

model Sample {
    id          String       @id @default(cuid())
    userId      String
    user        User         @relation(fields: [userId], references: [id])
    molecules   Molecule[]   @relation()
    vendors     Vendor[]     @relation()
    experiments Experiment[] @relation()
}

enum CoreLevel {
    K
    L1
    L2
    L3
    M1
    M2
    M3
}

model Experiment {
    // Identifiers
    id            String     @id @default(cuid())
    userId        String
    user          User       @relation(fields: [userId], references: [id])
    sampleId      String
    sample        Sample     @relation(fields: [sampleId], references: [id])
    instrumentId  String
    instrument    Instrument @relation(fields: [instrumentId], references: [id])
    absorbingAtom String
    coreLevel     CoreLevel

    normalization                       String?
    incidentElectricFieldPolarAngle     Float?
    incidentElectricFieldAzimuthalAngle Float?
    energy                              Float[]
    intensity                           Float[]
    izero                               Float[]
    izero2                              Float[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
